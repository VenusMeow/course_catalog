<h1 class="text-center">Subjects</h1>
<%= link_to 'Back', :back  ,class: 'btn btn-info'%>

</br>
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
      <th>Idnum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.abbreviation %></td>
        <td><%= subject.idnum %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
