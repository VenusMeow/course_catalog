<h1 class="text-center">Courses</h1>
<%= link_to 'Back', :back ,class: 'btn btn-info'%>

</br>
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Description</th>
      <th>Requirements</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= course.description %></td>
        <td><%= course.requirements %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
