<h1 class="text-center">Course_catalog</h1>

<div class="row">
  <aside class="col-md-4">
  <h2> Welcome!<%= @user.name %> <%= link_to "Log out", logout_path, method: :delete, class:'btn btn-danger' %></h2>
  </aside>
</div>

<div>
  <p>
  <%= link_to 'Search for a course', search_path ,class: 'btn btn-info'%>
  <%= link_to 'View All Instructors', instructors_path , class: 'btn btn-info'%>
  <%= link_to 'View All Courses', courses_path ,class: 'btn btn-info'%>
  <%= link_to 'View All Subjects', subjects_path ,class: 'btn btn-info'%>
  </p>

</div>

<div>

  <h3> Enrolled courses: </h3>
  <table class = "table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th>Description</th>
        <th>Requirements</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.code %></td>
          <td><%= course.description %></td>
          <td><%= course.requirements %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
