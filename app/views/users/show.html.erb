<h1>Course_catalog</h1>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h2> Welcome!
        <%= @user.name %>


      </h2>

    </section>

  </aside>
</div>

<div>
  <p>
  <%= link_to 'Instructors', instructors_path , class: 'btn btn-success'%>
  <%= link_to 'Courses', courses_path ,class: 'btn btn-success'%>
  <%= link_to 'Subjects', subjects_path ,class: 'btn btn-success'%>
   <%= link_to 'Search for a course', search_path ,class: 'btn btn-success'%>
  </p>
   <%= link_to "Log out", logout_path, method: :delete %>

</div>

<div>

  <h3> Enrolled courses: </h3>
  <table class = "table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th>Description</th>
        <th>Requirements</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.code %></td>
          <td><%= course.description %></td>
          <td><%= course.requirements %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
