<h1 class="text-center">Results</h1>
<%= link_to 'Back', :back ,class: 'btn btn-info'%>

</br>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Description</th>
      <th>Requirements</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= course.description %></td>
        <td><%= course.requirements %></td>
        <td><%= link_to 'Enroll', enroll_path(:course_id => course.id), class: 'btn btn-success'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
