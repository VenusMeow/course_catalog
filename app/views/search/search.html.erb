
<!DOCTYPE html>
<html>
  <head>
   </head>
  <body>
    <h2>Search for a course</h2>
    <%= link_to 'Back', :back ,class: 'btn btn-info'%>
  </br>
  </br>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(:search, url: search_path) do |f| %>

          <%= f.label :subject %>
          <%= f.collection_select :subject, Subject.order(:id),:id,:name, include_blank: true ,class: 'form-control' %>
        </br>
          <%= f.label :course %>
          <%= f.text_field :course, class: 'form-control' %>

          <%= f.submit "Search", class: "btn btn-primary" %>
        <% end %>

      </div>
    </div>
  </body>
</html>
